
TopLevel
    = << Stmt@+ #stmts>>;

Stmt
    = IfStmt
    / WhileStmt
    / ForStmt
    / ReturnStmt
    / ImportStmt
    / BreakStmt
    / ContinueStmt
    / DefineFunction
    / DefineClass
    / Expr EOS?
    ;

EOS
    = ";"
    / NL
    ;

IfStmt
    = <<"if" WS+ Expr@ WS* ":" NL+ Block@ (indent _* "else" WS* ":" NL+ Block@)? _* #if>> NL?
    ;

WhileStmt
    = <<"while" WS+ Expr@ WS* ":" NL+ Block@ #while>> NL?
    ;

ForStmt
    = <<"for" WS+ Symbol@ WS+ "in" WS+ Expr@ ":" NL+ Block@ #for>> NL?
    ;

ReturnStmt
    = <<"return" WS+ Expr@ #return>> EOS?
    ;

ImportStmt
    = <<"import" WS* ImportSymbol@ (WS* "," WS* Symbol@)* #import>> NL?
    / <<"from" WS* Symbol@ WS* "import" WS* ImportSymbol@ (WS* "," WS* ImportSymbol@)* #fromImport>> NL?
    ;

DefineFunction
    = <<"def" WS+ Symbol@ "(" Params@ ")" WS* ":" NL+ Block@ #function>> NL?
    ;

DefineClass
    = <<"class" WS+ Symbol@ (WS* "(" (Symbol@)? WS* ")" )? WS* ":" NL+ ClassBlock@ #class>> NL?
    ;

BreakStmt
    = <<"break" #break>> EOS?
    ;

ContinueStmt
    = <<"continue" #continue>> EOS?
    ;

ReturnStmt
    = <<"return" WS+ Expr@ #return>> EOS?
    ;

Block
    = << (indent WS* Stmt@ NL?)+ #block>>;

ClassBlock
    = Block;

Expr
    = Expr <<@ WS* Op@  WS* Expr@ >>
    / Expr <<@ "[" WS* Expr@ WS* "]" #get>>
    / Expr <<@ "." Expr@ #field>>
    / Expr << "(" _* Params@ _* ")" #call>>
    / Symbol <<@ _* '=' _* Expr@ #assign>>
    / Symbol
    / StringLiteral
    / Integer
    / ArrayLiteral
    / MapLiteral
    ;

ArrayLiteral
    = << "[" _* Expr@? (_* "," _* Expr@)* _* "]" #array>>
    / << "[" _* Expr@ _* "for" _* Symbol@ _* "in" _* Expr@ (_* "if" _* Expr@)? _* "]" #listComprehension >>
    ;

MapLiteral
    = << "{" _* (StringLiteral@ / Symbol@) _* ":" _* Expr@ _* "}" #map>>;

StringLiteral
    = << '"' ('\\"' / !'"' .)* '"' #string >>
    / << "'" ("\\'" / !"'" .)* "'" #string >>
    ;

Params
    = << Symbol@? (_* "," _* Symbol@)* _* #params>>;

Op
    = '+' #add / '-' #sub / '*' #mul / '/' #div / '%' #mod / '<=' #lte / '<' #lt / '>=' #gte / '>' #gt;

Integer
    = << ('-' WS* / '+' WS*)?[0-9]+ #integer>>
    ;

Symbol
    = << [a-zA-Z]+ #symbol>>
    ;

Asterisk
    = << '*' #asterisk>>
    ;

ImportSymbol
    = Symbol@
    / Asterisk@
    ;

WS
    = [ \t];

NL
    = [\n];

_
    = WS
    / NL
    ;
