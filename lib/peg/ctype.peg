// ctype.peg
// these types are defined mainly for minic.peg


import _ from spacing.peg;

BasicType
 = 'void'
 / 'boolean'
 / 'char'    //int8
 / 'short'   //int16
 / 'int'     //int32
 / 'long'    //int64
 / 'float'
 / 'double'
 ;

Type
 = << BasicType #type>>
 / 'struct' _ << [A-Za-z0-9_]+ #type >>
 / Type <<@ '*' #pointer >>
 ;

TopLevel
 = Type
 ;

